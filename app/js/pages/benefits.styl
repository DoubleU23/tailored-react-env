@import 'doubleu23-stylus/inc/mixins.styl'

#campaigns
    margin-top 2rem

#benefitsList
    #beneftisListInner
        cf()
        width 100%
    .benefitListElement
        // background - is defined in BenefitsList->renderBenefits()
        cursor      pointer
        width       245px
        height      120px
        float       left
        margin      10px 10px 0 0
        boxShadow   0px 0px 5px rgba(30, 30, 30, 0.7)
        position    relative
        overflow    hidden
        &:hover .benefitListElementOverlay
            top 0
        .benefitListElementOverlay
            padding             0.5rem
            color               #fff
            background-color    rgba(30, 30, 30, 0.7)
            position            absolute
            width               100%
            height              100%
            top                 75px
            transition          top 150ms ease-in
            .benefitListElementTitle
                display         block
                font-weight     bold
                margin-bottom   1rem
                height          2rem
            .benefitListElementInfo
                display         block
                white-space     nowrap
                overflow        hidden
                text-overflow   ellipsis
                // max-height      66px
                width           245px


