@import 'doubleu23-stylus/normalize'
@import 'doubleu23-stylus/inc/helpers'
// @import 'doubleu23-stylus/mqs'

body
    font-family Roboto, sans-serif

div, span,
h1, h2, h3
    box-sizing border-box

h1, h2
    font-size 1.5rem
    margin 1rem 0 1.3rem
    .sub, .subTitle
        display block
        margin-top .3rem

span, p
    line-height 1.2rem
    margin-top 1.5rem

// TBD: use .indent rule
#wrapper
    > div
        padding 0 1rem

footer
    padding 0 1rem
